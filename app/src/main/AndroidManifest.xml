<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prohealth.cs646.edu.sdsu.cs.prohealth">

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PinActivity"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.SignUp"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UserHome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BMI"
            android:label="@string/title_activity_bmi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.VitalDetails"
            android:label="Add Record" />
        <activity
            android:name=".activities.BGC"
            android:label="@string/title_activity_bgc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BP"
            android:label="@string/title_activity_bp"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>