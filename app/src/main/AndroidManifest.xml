<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prohealth.cs646.edu.sdsu.cs.prohealth">

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="@string/title_activity_scrolling"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UserHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BMI"
            android:label="@string/title_activity_bmi"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.VitalDetails"
            android:screenOrientation="portrait"
            android:label="Add Record" />
        <activity
            android:name=".activities.BGC"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_bgc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BP"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_bp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.VitalRecordDetails"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_vital_record_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Profile"
            android:screenOrientation="portrait"
            android:label="Profile" />
        <activity
            android:name=".activities.MedicalVisitList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_medical_visit_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.VaccinationList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_vaccination_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AilmentList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ailment_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddRecords"
            android:screenOrientation="portrait"
            android:label="Add Record" />
        <activity android:name=".activities.RecordDetails"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="Record details"></activity>
    </application>

</manifest>